<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <!-- <% const name = 'Mario' %> <%= name %> -->

    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
      <h2>All Blogs</h2>

      <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
      <a class="single" href="/blogs/<%= blog._id %> ">
        <h3><%= blog.title %></h3>
      </a>
      <p><%= blog.snippet %></p>
      <% }) %> <% } else { %>
      <p>No blogs</p>
      <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
